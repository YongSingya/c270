<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Add Student</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/style.css" />
  </head>

  <body>
    <nav class="navbar navbar-dark navbar-custom">
      <div class="container">
        <a class="navbar-brand fw-bold" href="/">Student List App</a>
      </div>
    </nav>

    <div class="container mt-5">
      <div class="card-custom">
        <h2 class="text-center fw-bold mb-4">Add New Student</h2>

        <form method="POST" action="/addStudent" enctype="multipart/form-data">
          <label class="form-label">Student Name</label>
          <input
            type="text"
            name="name"
            class="form-control mb-3"
            required
          />

          <label class="form-label">Date of Birth</label>
          <input
            type="date"
            name="dob"
            class="form-control mb-3"
            required
          />

          <label class="form-label">Contact Number</label>
          <input
            type="text"
            name="contact"
            class="form-control mb-3"
            required
          />

          <label class="form-label">Profile Icon</label>
          <div class="mb-3 d-flex align-items-center gap-3">
            <img id="avatarPreview" src="https://via.placeholder.com/80" class="avatar" alt="Avatar preview">
            <input type="file" name="avatar" accept="image/*" id="avatarInput" class="form-control-file">
          </div>

          <button class="btn btn-custom w-100">Add Student</button>
        </form>

        <script>
          const avatarInput = document.getElementById('avatarInput');
          const avatarPreview = document.getElementById('avatarPreview');
          avatarInput.addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (file) {
              avatarPreview.src = URL.createObjectURL(file);
            } else {
              avatarPreview.src = 'https://via.placeholder.com/80';
            }
          });
        </script>
      </div>
    </div>

    <footer class="footer">Student App Â© 2026</footer>
  </body>
</html>