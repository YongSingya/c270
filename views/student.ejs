<div class="container">
  <div class="main-form" style="text-align:center;">
    <% if (student.photo) { %>
      <img src="/uploads/<%= student.photo %>" style="width:120px;height:120px;border-radius:50%;object-fit:cover;margin-bottom:1rem;border:3px solid var(--primary);">
    <% } %>
    <h2><%= student.name %></h2>
    <p style="color:#666; margin-bottom:1rem;">Student ID: #<%= student.studentId %></p>
    <hr style="margin-bottom:1rem; opacity:0.1">
    <div style="text-align:left;">
        <p><strong>DOB:</strong> <%= student.dob %></p>
        <p><strong>Contact:</strong> <%= student.contact %></p>
    </div>
    <br>
    <a href="/" class="btn btn-add">Back to List</a>
  </div>
</div>