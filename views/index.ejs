<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student List App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>

<body>

<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
  <div class="container">
    <a class="navbar-brand fw-bold" href="/">Student List App</a>
    <a href="/addStudent" class="btn btn-light">Add Student</a>
  </div>
</nav>

<div class="container mt-5">

  <div class="text-center text-white mb-4">
    <h1 class="fw-bold">Student Directory</h1>
    <p>Search, view, and manage your students easily.</p>
  </div>

  <!-- SEARCH BAR -->
  <form method="GET" action="/" class="row justify-content-center mb-4">
    <div class="col-md-6">
      <input type="text" name="search" value="<%= search %>" class="form-control form-control-lg"
            placeholder="Search by student name">
    </div>
    <div class="col-md-2 d-grid">
      <button class="btn btn-light btn-lg fw-bold">Search</button>
    </div>
  </form>

  <!-- STUDENT LIST -->
  <div class="card-custom">

    <% if (students.length === 0) { %>
      <p class="text-center mt-3">No students found!</p>
    <% } else { %>

    <table class="table table-hover text-center">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>DOB</th>
          <th>Contact</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% students.forEach(s => { %>
          <tr>
            <td>
              <a href="/student/<%= s.studentId %>" class="fw-bold text-decoration-none">
                <%= s.name %>
              </a>
            </td>

            <td><%= s.dob %></td>
            <td><%= s.contact %></td>

            <td>
              <form action="/deleteStudent/<%= s.studentId %>" method="POST"
                    onsubmit="return confirm('Are you sure?')">
                <button class="btn btn-danger btn-sm">Delete</button>
              </form>
              <a
                href="/editStudent/<%= s.studentId %>"
                class="btn btn-warning btn-sm me-1"
              > Edit </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <% } %>

  </div>
</div>

<footer class="footer">
  Student App Â© 2026 for C270
</footer>

</body>
</html>