<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <h1>Student Management</h1>

    <div class="dashboard">
      <div class="card">
        <h3>Total Enrollment</h3>
        <p class="stat-number"><%= totalCount %></p>
      </div>
    </div>

    <div class="action-bar">
      <a href="/addStudent" class="btn btn-add">+ Add Student</a>
      <form action="/" method="GET" class="search-form">
        <input type="text" name="search" placeholder="Search students..." value="<%= searchQuery %>">
        <button type="submit" class="btn btn-add">Search</button>
        <% if(searchQuery) { %><a href="/" class="btn btn-delete">Reset</a><% } %>
      </form>
    </div>
    
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>Photo</th>
            <th>Name</th>
            <th>Contact</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if(student.length > 0) { %>
            <% student.forEach(s => { %>
              <tr>
                <td>
                  <% if (s.photo) { %><img src="/uploads/<%= s.photo %>" class="student-thumb">
                  <% } else { %><div class="student-thumb" style="background:#eee;display:flex;align-items:center;justify-content:center;font-size:10px">N/A</div><% } %>
                </td>
                <td><a href="/student/<%= s.studentId %>" style="color:var(--primary); font-weight:bold;"><%= s.name %></a></td>
                <td><%= s.contact %></td>
                <td>
                  <a href="/editStudent/<%= s.studentId %>" class="btn btn-edit">Edit</a>
                  <form action="/deleteStudent/<%= s.studentId %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-delete" onclick="return confirm('Delete this record?')">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr><td colspan="4" class="no-results">No students found.</td></tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>